upstream django-project {
    #server 127.0.0.1:8002;
    server unix://{{PROJECT_ROOT}}/uwsgi.sock; # for a file socket
}

server {
        listen 80;
        server_name {{DOMAIN}};
        client_max_body_size 0;
        charset utf-8;

        location /static {
            alias {{PROJECT_ROOT}}/static_root/;
            add_header Access-Control-Allow-Origin *;
    }

        location /media {
            alias {{PROJECT_ROOT}}/media_root/;
        }

        location / {
          uwsgi_pass  django;
          include uwsgi_params;
        }
}
